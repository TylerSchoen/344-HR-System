<%- partial ('navbar.ejs') %>

<div class="container">
    <div class="row">    
        <div class="col-sm-6 col-md-offset-1 col-md-10">
            <form action="<%= submitTarget %>" method="<%= submitMethod %>">
                <h3>Finish creating your account</h3>
                <% for (var i = 0; i < fields.length; i++) { %>
                    <div class="form-group">
                        <label for="<%= fields[i] %>"><%= fields[i] %>: </label>
                        <input type="text" class="form-control" name="<%= fields[i] %>">
                    </div>
                <% } %>
                <div class="form-group">
                    <select class="form-control" name="type">
                        <option value="Student">Student</option>
                        <option value="Employee">Employee</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <input type="hidden" name="id" value="<%= user.id %>">
                <input type="hidden" name="firstname" value="<%= user.firstName %>">
                <input type="hidden" name="lastname" value="<%= user.lastName %>">
                <div class="form-group">
                    <input class="btn btn-default" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>